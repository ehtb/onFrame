{
  "extends": "airbnb/legacy",
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "mocha": true,
    "node": true,
    "jquery": true,
    "es6": true
  },
  "globals": {
    "__DEV__": true,
    "__TEST__": true,
    "__RELEASE__": true
  },
  "rules": {
    "block-scoped-var": 0,
    "padded-blocks": 0,
    "quotes": [2, "single", "avoid-escape"],
    "comma-dangle": 0,
    "no-unused-vars": 0,
    "no-new": 0,
    "strict": 0,
    "no-use-before-define": 0,
    "no-underscore-dangle": 0,
    "camelcase": 0,
    "no-param-reassign": 0,
    "no-nested-ternary": 0,
    "vars-on-top": 0,
    "one-var": 0,
    "id-length": 0,
    "eqeqeq": [2, "allow-null"],
    "func-names": 0,
    "no-console": 0,
    "new-cap": 0
  },
  "ecmaFeatures": {
    "modules": true,
    "arrowFunctions": true,
    "templateStrings": true,
    "blockBindings": true,
    "jsx": true
  }
}
